{
  "name": "order",
  "description": "order service which is responsible for managing order",
  "base_url": "https://nashtechglobal.com",
  "imports": [
    {
      "uri": "https://app.apibuilder.io/apicollective/apibuilder-spec/latest/service.json"
    },
    {
      "uri": "https://app.apibuilder.io/apicollective/apibuilder-common/latest/service.json"
    },
    {
      "uri": "https://app.apibuilder.io/apicollective/apibuilder-generator/latest/service.json"
    }
  ],

  "models": {

    "order": {
      "fields": [
        { "name": "id", "type": "string" },
        { "name": "number", "type": "string" },
        { "name": "merchant_id", "type": "string" },
        { "name": "submitted_at", "type": "date-time-iso8601" },
        { "name": "total", "type": "decimal" }
      ]
    },
    "order_form": {
      "fields": [
        { "name": "merchant_id", "type": "string" },
        { "name": "total", "type": "decimal" }
      ]
    },
    "error": {
      "fields":[
        { "name": "code", "type": "[string]" },
        { "name": "message", "type": "[string]" }
      ]
    }
  },

  "resources": {
    "order": {
      "path": "/:merchant_id/orders",
      "operations": [
        {
          "method": "GET",
          "path": "/:number",
          "responses": {
            "200": { "type": "order" },
            "401": { "type": "unit" },
            "404": { "type": "unit" }
          }
        },
        {
        "method": "POST",
          "body": {
          	"type": "order_form"
          },
          "responses": {
            "200": { "type": "order_form" },
            "201": { "type": "order_form" },
            "404": { "type": "unit" },
            "422": { "type": "error" }
          }
        },
        {
        "method": "DELETE",
        "responses":{
             "200": { "type": "order" },
             "401": { "type": "unit" },
             "404": { "type": "unit" },
             "422": { "type": "error" }	        
        }
        },
        {
        "method": "PUT",
        "body": {
          	"type": "order_form"
          },
          "responses": {
            "200": { "type": "order" },
            "201": { "type": "order" },
            "404": { "type": "unit" },
            "422": { "type": "error" }
          }
        }
      ]
    }
  }
}
